<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
    <RootNamespace>Microsoft.Build.Utilities.ProjectCreation</RootNamespace>
    <AssemblyName>Microsoft.Build.Utilities.ProjectCreation</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>A fluent interface for generation MSBuild project files.</Description>
    <PackageId>MSBuild.ProjectCreation</PackageId>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <IncludeSymbols>true</IncludeSymbols>
    <NuspecFile>$(MSBuildProjectName).nuspec</NuspecFile>
    <NuspecProperties>Configuration;PackageId;NuGetPackageVersion;Authors;PackageLicenseUrl;PackageProjectUrl;PackageDescription;Copyright;PackageTags;RepositoryUrl;AssemblyName;PackageRequireLicenseAcceptance</NuspecProperties>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build" />

    <EmbeddedResource Update="Resources\Strings.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>

    <Compile Update="Resources\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
